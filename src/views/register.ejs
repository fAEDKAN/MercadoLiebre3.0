<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de registro' }) %>

    <body>
        <!-- Header -->
        <%- include('partials/headerNavbar') %>
            <!-- /Header -->

            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Formulario de Registro</h2>
                    </div>
                </div>
                <div class="col-12">
                    <form action="" method="POST" >
                        <div class="row product-detail">
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="firstName">Nombre:</label>
                                <input class="form-input" type="text" id="nombre" name="firstName" value="<%= locals.old && old.firstName ? old.firstName : null %>">
                                <small class="form-error">
                                    <%= locals.errors && errors.firstName ? errors.firstName.msg : null %>
                                </small>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="lastName">Apellido:</label>
                                <input class="form-input" type="text" id="apellido" name="lastName" value="<%= locals.old && old.lastName ? old.lastName : null %>">
                                <small class="form-error">
                                    <%= locals.errors && errors.lastName ? errors.lastName.msg : null %>
                                </small>

                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="email">Email:</label>
                                <input class="form-input" type="email" id="email" name="email" value="<%= locals.old && old.email ? old.email : null %>">
                                <small class="form-error">
                                    <%= locals.errors && errors.email ? errors.email.msg : null %>
                                </small>

                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="password">Contraseña:</label>
                                <input class="form-input" type="password" id="password" name="password" value="<%= locals.old && old.password ? old.password : null %>">
                                <small class="form-error">
                                    <%= locals.errors && errors.password ? errors.password.msg : null %>
                                </small>

                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label" for="password2">Confirma contraseña:</label>
                                <input class="form-input" type="password" id="password2" name="password2" value="<%= locals.old && old.password2 ? old.password2 : null %>">
                                <small class="form-error">
                                    <%= locals.errors && errors.password2 ? errors.password2.msg : null %>
                                </small>

                            </div>
                            <div class="col-12">
                                <button class="buy-now-button" type="submit">Registrate</button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
            <!-- /todos los productos -->

            <!-- footer -->
            <%- include('partials/footer') %>
                <!-- /footer -->
    </body>

</html>